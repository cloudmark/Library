{
    "options": {
        "module": "amd",
        "target": "es5",
        "sourcemap": true,
        "generateTsConfig": true,
        "noEmitOnError":  false
    },
    "dev": {
        "files": [
            {
                "src": ["ng-apps/components/**/*.ng.ts", "ng-apps/Library.Home/**/*.ng.ts"],
                "dest": "wwwroot/js/Library.Home.js"
            }
        ]
    },
    "release": {
        "options": {
            "sourcemap": true
        },
        "files": "<%= typescript.dev.files %>"
    }
}